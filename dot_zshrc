if [ -n "${ZSH_DEBUGRC+1}" ]; then
    zmodload zsh/zprof
fi

# OMZ configuration
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(git zsh-autosuggestions pyenv-lazy zsh-autocomplete poetry chezmoi docker aliases alias-finder) 
source $ZSH/oh-my-zsh.sh

# Tool configuration
zstyle ':autocomplete:*' delay 2.5  # seconds (float)
zstyle ':omz:plugins:alias-finder' autoload yes # disabled by default
zstyle ':omz:plugins:alias-finder' longer yes # disabled by default
zstyle ':omz:plugins:alias-finder' exact yes # disabled by default
zstyle ':omz:plugins:alias-finder' cheaper yes # disabled by default
zstyle ':omz:update' frequency 14

# Environment variables
export EDITOR="nvim"
export VISUAL="$EDITOR"
export PNPM_HOME="/Users/djain/Library/pnpm"
export STARSHIP_CONFIG="$HOME/.config/starship/starship.toml"
export GITLAB_HOST="https://gitlab.agodadev.io"

# Path modifications
export PATH="/opt/homebrew/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$PNPM_HOME:$PATH"
export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:$PATH"

# External tools
source <(fzf --zsh)
eval "$(starship init zsh)"
if [[ "$DISABLE_FOR_AI_TOOLS" != 1 ]]; then
    eval "$(zoxide init --cmd cd zsh)"
fi
eval $(thefuck --alias f)

# Custom aliases
alias p="cd $HOME/Desktop/projects"
alias c="claude"
alias g="git"
alias v="nvim"
alias cma="chezmoi apply -v"
alias cmcd="chezmoi cd"
alias cmu="chezmoi update"
alias ls="lsd"
alias cat="bat"
alias lg="lazygit"

. ~/.asdf/plugins/java/set-java-home.zsh

if [ -n "${ZSH_DEBUGRC+1}" ]; then
    zprof
fi

